function [fv,x,y,z] = mask2surf(BW,voxsz,V)

d = size(BW);
if nargin<2
    voxsz = ones(1,3);
end
if nargin<3
    V = {};
else
    V = {V};
end

% n = cross(dircos(1:3),dircos(4:6));
% M = [reshape(dircos,3,2),n',origin';zeros(1,3),1];

% np = prod(d);
[x,y,z] = meshgrid((0:d(2)-1)*voxsz(2),...
                   (0:d(1)-1)*voxsz(1),...
                   (0:d(3)-1)*voxsz(3));
% xyz = M * [reshape(cat(4,x,y,z),np,3)';ones(1,np)];
% xyz = reshape(xyz(1:3,:)',[d,3]);

fv = isosurface(xyz(:,:,:,1),xyz(:,:,:,2),xyz(:,:,:,3),...
    smooth3(double(BW)*1000,'gaussian',5,1.5),500,V{:});
fv = smoothpatch(fv,1,5,1,[]);
fv = reducepatch(fv);

% % Center image at origin:
% lims = (d-1).*voxsz/2;
% [y,x,z] = meshgrid(-lims(2):voxsz(2):lims(2),...
%                    -lims(1):voxsz(1):lims(1),...
%                    -lims(3):voxsz(3):lims(3));
% 
% fv = isosurface(x,y,z,smooth3(double(BW)*1000,'gaussian',5,1.5),500,V{:});
% fv = smoothpatch(fv,1,5,1,[]);
% fv = reducepatch(fv);
